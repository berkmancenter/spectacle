
<!-- Page Content Begins -->
	
	<div class="container sign-in">
		
		<div class='sign-in-head'>
          <a class="brand" href="{{path('ZeegaCommunityBundle_home')}}">
          <img src="{{ asset('images/spectacle.png') }}" alt="Spectacle Logo" width="350" height="37">
          </a>
		
            <h2 class="tagline">A SLIDESHOW MACHINE FOR HARVARD LIBRARY IMAGES</h2>
		</div>
		<h2 class='message'>Change your password here</h2>
		
		<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-vertical" >
		    {{ form_errors(form) }}
			
			{% for passwordField in form.new %}
			    <div class="form-field controls"  style="margin-bottom:0">
			    	
					<!-- the two lines below render the label (e.g. New Password) and the text box; changing the class changes the CSS class -->
			        <h4>{{ form_label(passwordField, null, { 'attr': {'class': 'form-label'} }) }}</h4>
			        {{ form_widget(passwordField, { 'attr': {'class': 'form-input input-xlarge'} }) }}
			    </div>
			{% endfor %}
			
			{{ form_rest(form) }}
			
			<div>
		        
		        <button type="submit" class="btn btn-success btn-custom" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}"><h4>Submit</h4></button>
		    </div>
		</form>
	
	</div>



